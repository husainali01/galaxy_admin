<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
    <include
        layout="@layout/actionbar_laytout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_10_dp"
        android:orientation="vertical"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_text"
            android:textColor="@color/text_color"
            style="@style/TextAppearanceRegular.FontPath"
            android:textSize="@dimen/dimen_15_sp"

           />


        <EditText
            android:visibility="gone"
            android:id="@+id/email_address_textview"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="15dp"
            style="@style/TextAppearanceRegular.FontPath"
            android:textColorHint="@color/nav_color"
            android:hint="@string/email_address" />

        <Button
            android:id="@+id/sendBtn"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="call now"
            android:layout_margin="@dimen/dimen_10_dp"
            android:textColor="@color/white"
            android:background="@color/button_color"
            />
    </LinearLayout>


</LinearLayout>